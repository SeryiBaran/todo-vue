{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "ignoreDeprecations": "5.0",
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "types": ["unplugin-icons/types/vue"]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
